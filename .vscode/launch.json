    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Consola",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Consola/Debug/consola",
            "additionalSOLibSearchPath": "${workspaceFolder}/Libreria",
            "args": [
                "${workspaceFolder}/Consola/Configs/consola.config",
                "${workspaceFolder}/Consola/instrucciones.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Consola/Debug/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
